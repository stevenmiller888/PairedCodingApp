<div class="row" id="editors">
  <div class="col-md-6">
    <center><h3 style="color: white;"><%=@current_user.profile_name.capitalize%>'s code</h3></center>
    <textarea class="e1" id="<%=@current_user_id%>" rows="18"><%= @document1.text %></textarea>
    <textarea readonly class="i1" rows="4"></textarea>
    <center><button class="btn btn-success" id="run1">Run</button></center>
  </div>
  <div class="col-md-6">
    <center><h3 style="color: white;"><%=@friend.profile_name.capitalize%>'s code</h3></center>
    <textarea class="e2" id="<%=@friend_id%>" rows="18"><%= @document2.text %></textarea>
    <textarea readonly class="i2" rows="4"></textarea>
    <center><button class="btn btn-success" id="run2">Run</button></center>
  </div>
</div>
<script>
  $('.e1').ace({ theme: 'twilight', lang: 'ruby' })
  $('.e2').ace({ theme: 'chrome', lang: 'ruby' })
</script>