<div class="row">

<h2>Sign in</h2><br/>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class='form'><%= f.email_field :email, autofocus: true, placeholder: 'Email' %></div><br/>

  <div class='form'><%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%><br/>

  <div><%= f.submit "Sign in", class:'btn btn-primary' %></div>
<% end %><br/>

<p>Need an Account?</p>
<%= render "devise/shared/links" %>
</div>